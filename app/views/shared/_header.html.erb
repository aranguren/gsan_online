<header id="main-header">
  <div class="row">
    <div class="logo col-sm-6">
      <%= image_tag "logo.png", id: "logo" %>

      <form ng-controller="NavController">
        <ui-select ng-model="item"
                           theme="bootstrap"
                           ng-disabled="disabled"
                           reset-search-input="false"
                           title="Ache o que você procura"
                           ng-disabled="false"
                           required
                           on-select="navigarPara(item.id)">
          <ui-select-match placeholder="Ache o que você procura">{{item.title}}</ui-select-match>
          <ui-select-choices repeat="item in items | filter:$select.search">
            {{item.title}}
          </ui-select-choices>
        </ui-select>
      </form>
    </div>
  </div>
</header>
