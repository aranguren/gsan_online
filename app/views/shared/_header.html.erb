<header id="main-header">
  <a id="logo" href="/"><%= image_tag "logo.png" %></a>

  <form ng-controller="NavController">
    <ui-select ng-model="item"
                       theme="bootstrap"
                       ng-disabled="disabled"
                       reset-search-input="false"
                       title="Ache o que você procura"
                       ng-disabled="false"
                       required
                       on-select="navigarPara(item.id)">
      <ui-select-match placeholder="Ache o que você procura">{{item.modulo}} / {{item.grupo}} / {{item.title}}</ui-select-match>
      <ui-select-choices repeat="item in items | filter:$select.search">
        <small>{{item.modulo}} / {{item.grupo}} /</small> <b>{{item.title}}</b>
      </ui-select-choices>
    </ui-select>
  </form>
</header>
